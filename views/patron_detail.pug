extends index

block content
	body
		h1 Patron: #{patron.first_name} #{patron.last_name}
		form(action='/patrons/all_patrons', method='put')
			include partials/patron_form
		h2 Loan History
		table
			thead
				tr
					th Book
					th Patron 
					th Loaned on
					th Return by 
					th Returned on
					th Action
			tbody
				each loan, index in loans
					tr
						td
							a(href='book_detail') #{books[index].title}
						td
							a(href='javascript:window.location.reload(true)') #{patron.first_name} #{patron.last_name}
						td #{loans[index].dataValues.loaned_on}
						td #{loans[index].dataValues.return_by}
						td #{loans[index].dataValues.returned_on}
						td
							a.button(href='return_book' + loans.id) Return Book
