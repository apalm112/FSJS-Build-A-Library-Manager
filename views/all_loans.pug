extends index

block content
	h1= title
	p
		a.button(href='new_loan') Create New Loan
	p
		| Filters 
		a(href='all_loans') All
		|	| 
		a(href='overdue_loans') Overdue
		|	| 
		a(href='checked_loans') Checked Out
	table
		thead
			tr
				th Book
				th Patron 
				th Loaned on
				th Return by 
				th Returned on
				th Action
		tbody
			if loans
				each loan in loans
					tr
						td
							a(href='book_detail') #{loan.book_id}
						td
							a(href='patron_detail') #{loan.patron_id}
						td #{loan.loaned_on}
						td #{loan.return_by}
						td #{loan.returned_on}
						td
							a.button(href='return_book') Return Book
