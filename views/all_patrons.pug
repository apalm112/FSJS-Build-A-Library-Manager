extends index

block content
	h1= title
	p
		a.button(href='new_patron') Create New Patron
	table
		thead
			tr
				th Patron ID
				th Name 
				th Address
				th Email
				th Library ID
				th Zip
		tbody
			if patrons
				each patron in patrons
					tr
						td #{patron.id}
						td
							a(href='patron_detail/' + patron.id + '/edit') #{patron.first_name} #{patron.last_name}
						td #{patron.address}
						td #{patron.email}
						td #{patron.library_id}
						td #{patron.zip_code}
