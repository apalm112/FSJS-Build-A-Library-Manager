            //- option(value='3') Alena Holligan
            //- option(value='4') Michael Poley
    p
      label(for='loaned_on') Loaned on:
      input#loaned_on(type='text', value='Sun May 22 2016 17:00:00 GMT-0700 (PDT)', name='loaned_on')
    p
      label(for='return_by') Return by:
      input#return_by(type='text', value='Sun May 29 2016 17:00:00 GMT-0700 (PDT)', name='return_by')
    p
      input(type='submit', value='Create New Loan')
