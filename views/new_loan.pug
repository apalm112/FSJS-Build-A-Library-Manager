            //- option(value='12') Ready Player One
            //- option(value='13') Armada
            //- option(value='14') Pride and Prejudice
            //- option(value='15') Emma
    p
      label(for='patron_id') Patron
      select#patron_id
        if patrons
          each patron in patrons
            option(value='1') #{patron.first_name} #{patron.last_name}
